    <maven-compiler-plugin.version>3.6.0</maven-compiler-plugin.version>
    <fuse.version>7.8.0.fuse-sb2-780038-redhat-00001</fuse.version>
  </properties>
  <dependencyManagement>

   <dependencies>
      <dependency>
        <groupId>org.jboss.redhat-fuse</groupId>
